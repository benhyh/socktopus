generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum OrderStatus {
  fulfilled
  shipped
  awaiting_shipment
  awaiting_payment
}

enum materials {
  cotton
  polyester
  wool
}

enum colors {
  black
  white
  gray
  red
  blue
  purple
}

enum sizes {
  xs
  small
  medium
  large
  xl
}

model Configuration {
  id    String @id @default(cuid())
  width Int
  height Int
  color colors?
  size sizes?
  imageUrl String
  material materials?
  croppedImageUrl String?
}